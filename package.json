{
  "name": "proflific",
  "dependencies": {
    "bluebird": "3.7.2",
    "cpuprofile": "0.1.1",
    "fast-csv": "4.3.6",
    "fp-ts": "2.13.1",
    "fs-extra": "11.1.0",
    "io-ts": "2.2.20",
    "lodash": "4.17.21",
    "meow": "11.0.0",
    "typescript-natural-sort": "0.7.2"
  },
  "scripts": {
    "test": "ava",
    "format": "prettier-standard '{src,test,scripts}/**/*.{js,jsx,ts,tsx}'",
    "lint": "standardx '{src,test,scripts}/**/*.{js,jsx,ts,tsx}' --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test,scripts}/**/*.{js,jsx,ts,tsx}": [
      "yarn format",
      "yarn lint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/bluebird": "3.5.38",
    "@types/fs-extra": "11.0.1",
    "@types/lodash": "4.14.191",
    "@types/meow": "5.0.0",
    "@types/node": "18.14.6",
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "ava": "2.4.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.2",
    "prettier-standard": "16.4.1",
    "standard": "16.0.4",
    "standardx": "7.0.0",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": 0
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "ignore": [
      "**/*.d.ts"
    ]
  },
  "ava": {
    "compileEnhancements": false,
    "files": [
      "test/**.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "tap": true
  }
}
